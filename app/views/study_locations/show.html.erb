<div class="inner-content">
	<h1><%= @study_location.site.name %></h1>
	<p><strong>Study</strong></p>
	<p><%= @study.title %></p>
	<strong>Participants</strong>
	</ul>
	<% if @participations.length == 0 %>
		<p>There are no participants currently registered for this study at this location.</p>
	<% else %>
		<table>
			<thead>
	    <tr>
	      <th>Name</th>
	      <th>Date of Birth</th>    
	      <th>Gender</th>
	      <th>Address</th>
	      <th></th>
	    </tr>
	    </thead>
			<% @participations.each do |participation| %>
				<tr>
					<td><%= participation.participant.name %> </td>
					<td><%= participation.participant.date_of_birth %></td>
					<td><%= participation.participant.gender %></td>
					<td><%= participation.participant.address %></td>
					<td><%= link_to "View", participant_path(participation.participant) %></td>
				</tr>
			<% end %>
		</table>	
	<% end %>
	<div class="button-div">
		<%= link_to "Create a New Participant", new_participant_path(:site_id => @site.id, :study_id => @study.id), :class => 'button' %>
	</div>
	<div class="button-div">
		<%= link_to "Enroll Existing Participant", new_site_participation_path(@study_location.site, :study_id => @study.id), :class => 'button' %>
	</div>
	<div class="button-div">
		<%= link_to "Return To Study", study_path(@study), :class => "button" %>
	</div>
</div>